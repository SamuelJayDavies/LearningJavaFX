<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="490.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.learningjavafx.HigherOrLowerController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Higher or Lower?" />
      <Button fx:id="modeSelectBtn" layoutX="339.0" layoutY="361.0" mnemonicParsing="false" onAction="#switchToModeSelect" text="Return to Mode Select" />
      <Button fx:id="higherBtn" layoutX="381.0" layoutY="160.0" mnemonicParsing="false" onAction="#higherBtnClicked" style="-fx-background-color: green;" text="Higher" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor></Button>
      <Button fx:id="lowerBtn" layoutX="381.0" layoutY="200.0" mnemonicParsing="false" onAction="#lowerBtnClicked" prefHeight="25.0" prefWidth="52.0" style="-fx-background-color: red;" text="Lower" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor></Button>
      <Pane layoutX="194.0" layoutY="101.0" prefHeight="200.0" prefWidth="120.0" style="-fx-border-color: black; -fx-background-color: red;">
         <children>
            <Label fx:id="lastCardLbl" alignment="CENTER" contentDisplay="CENTER" layoutX="4.0" layoutY="92.0" prefHeight="17.0" prefWidth="112.0" text="Last Card" textAlignment="CENTER" textFill="WHITE" wrapText="true" />
         </children>
      </Pane>
      <Pane layoutX="46.0" layoutY="101.0" prefHeight="200.0" prefWidth="120.0" style="-fx-border-color: black; -fx-background-color: blue;">
         <children>
            <Label fx:id="unknownCard" alignment="CENTER" contentDisplay="CENTER" layoutY="92.0" prefHeight="17.0" prefWidth="120.0" text="Unknown" textFill="WHITE" wrapText="true" />
         </children>
      </Pane>
      <Pane layoutX="46.0" layoutY="41.0" prefHeight="46.0" prefWidth="268.0">
         <children>
            <Label fx:id="lastCardMsg" alignment="CENTER" prefHeight="46.0" prefWidth="268.0" text="Last Card Msg">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Label fx:id="totalLbl" layoutX="262.0" layoutY="79.0" prefHeight="17.0" prefWidth="52.0" text="Total: 0/0">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
   </children>
   <effect>
      <Bloom threshold="1.0" />
   </effect>
</AnchorPane>
